upstream backend {
    server $VITE_API_URL;
}

server {
    listen 80;

    location /api/ {
      proxy_pass http://backend$request_uri;
    }

    location / {
      root /usr/share/nginx/html;
      try_files $uri $uri/ /index.html;
    }

    location /assets/fonts/ {
      alias /usr/share/nginx/html/dist/assets/fonts/;
    }
}