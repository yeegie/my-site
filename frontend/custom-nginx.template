upstream backend {
    server $VITE_API_URL;
}

server {
    listen 80;

    location /api/ {
      proxy_pass http://backend$request_uri;
    }

    # location / {
      # proxy_pass http://localhost:5173;
    # }

    location / {
      root /usr/share/nginx/html;
      try_files $uri $uri/ /index.html;
    }

    # location /assets/fonts/ {
